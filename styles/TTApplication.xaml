

<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:folding="clr-namespace:ICSharpCode.AvalonEdit.Folding;assembly=ICSharpCode.AvalonEdit"
    Title="Thinktank" Name="Application" Height="600" Width="1000" Top="10" Left="10">

    <Window.Resources>
        <ResourceDictionary Source="Style.xaml" />
    </Window.Resources>

    <DockPanel>
        <Menu Name="Menu" DockPanel.Dock="Top"/>

        <StatusBar Name="StatusBar" DockPanel.Dock="Bottom" >
            <StatusBarItem Content="" />
        </StatusBar>

        <Grid Name="UserSystemGrid" >
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Name="UserGrid" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>

                <Grid Name="LibraryIndexGrid" Grid.Column="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>

                    <Grid Name="LibraryGrid"    Grid.Row="0" />
                    <Grid Name="IndexGrid"      Grid.Row="1" Margin="0,4,0,0" />

                    <GridSplitter Name="LibraryIndexSplitter" Grid.Row = "1" Style="{StaticResource HSplitterStyle}" />
                </Grid>

                <Grid Name="ShelfDeskGrid" Grid.Column="1" Margin="4,0,0,0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>

                    <Grid Name="ShelfGrid" Grid.Row="0" />
                    <Grid Name="DeskGrid" Grid.Row="1" Margin="0,4,0,0" />

                    <GridSplitter Name="ShelfDeskSplitter" Grid.Row="1" Style="{StaticResource HSplitterStyle}" />
                </Grid>

                <GridSplitter Name="UserSplitter" Grid.Column="1" Style="{StaticResource VSplitterStyle}" />

            </Grid>

            <Grid Name="SystemGrid" Grid.Row="1" Margin="0,4,0,0" />

            <GridSplitter Name="UserSystemSplitter" Grid.Row="1" Style="{StaticResource HSplitterStyle}" />

        </Grid>

    
    </DockPanel>

</Window>